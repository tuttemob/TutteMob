				   		<select class="form-control block-subitem-cond" name="bht_puf" required>
				   			<option value="0" selected>Não</option>
				   			<option value="1">Sim</option>
				   		</select>
				   	</div>
				   	
				   	<!-- Puf cor -->
				   	<label for="bht_pufcor" class="col-sm-4 block-subitem">Cor:</label>
				   	<div class="col-sm-8 block-subitem">
			   			<input type="text" class="form-control" name="bht_pufcor">
				   	</div>

				   	<!-- Dimensões -->
				   	<label for="bht_pufdimensoes" class="col-sm-4 block-subitem">Dimensões:</label>
				   	<div class="col-sm-8 block-subitem">
			   			<input type="text" class="form-control" name="bht_pufdimensoes">
				   	</div>				   					   	
				</div>
				
				<div class="form-group col-xs-12">
      				<label for="bht_possuitv" class="col-sm-4">Televisor:</label>
            		
